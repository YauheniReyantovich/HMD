<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="org.reyantovich.yauheni.hmdbase.HmdObjects" table="HMD_OBJECTS">
        <meta attribute="class-description">
            This class contains all objects.
        </meta>
        <id name="objectId" column="object_id">
        </id>

        <many-to-one name="objectType" column="object_type_id"/>

        <set name="values" table="hmd_values">
            <key>
                <column name="object_id"/>
            </key>
            <one-to-many class="org.reyantovich.yauheni.hmdbase.HmdValues"/>
        </set>

    </class>
</hibernate-mapping>